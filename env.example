# Cedar Authorization Portal - Environment Variables
# Copy this file to .env and configure as needed

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=cedar
POSTGRES_USER=cedar
POSTGRES_PASSWORD=cedar
POSTGRES_PORT=5432
DATABASE_URL=postgres://cedar:cedar@db:5432/cedar?sslmode=disable

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# Backend Configuration
# =============================================================================
APP_PORT=8080

# =============================================================================
# Frontend Configuration
# =============================================================================
WEB_PORT=5173
VITE_API_BASE_URL=http://localhost:8080

# =============================================================================
# Authentication Configuration
# =============================================================================
# Auth mode: "none" (no auth), "jwt" (Entra ID/Azure AD), or "kerberos" (SPNEGO)
AUTH_MODE=none

# Entra ID / Azure AD settings (required for AUTH_MODE=jwt)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_AUDIENCE=

# Kerberos settings (required for AUTH_MODE=kerberos)
KERBEROS_KEYTAB=
KERBEROS_SERVICE=

# Frontend redirect URI (optional, defaults to window.location.origin)
VITE_REDIRECT_URI=

# =============================================================================
# Example: JWT Authentication with Entra ID
# =============================================================================
# AUTH_MODE=jwt
# AZURE_TENANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# AZURE_CLIENT_ID=yyyyyyyy-yyyy-yyyy-yyyy-yyyyyyyyyyyy
# AZURE_AUDIENCE=api://cedar-portal

# =============================================================================
# Example: Kerberos Authentication
# =============================================================================
# AUTH_MODE=kerberos
# KERBEROS_KEYTAB=/etc/krb5.keytab
# KERBEROS_SERVICE=HTTP/cedar.example.com


